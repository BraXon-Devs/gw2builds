extends layout

block content
    #container
        .header
            img(src=img("header/logo.svg", role="presentation")).logo
            img(src=img("header/title.svg"), alt="gw2efficiency | Build Editor").title
        .content
            noscript.error Enable JavaScript to use the gw2efficiency Build Editor.
            .loading
        style(type="text/css").
            html, body {
                margin: 0;
                font-family: sans-serif;
                height: 100%;
            }
            #container {
                height: 100%;
                display: flex;
                flex-direction: column
            }
            .header {
                height: 64px;
                background-image: linear-gradient(134deg, #3023ae, #c86dd7);
            }
            .logo {
                padding: 10px;
                border-right: 1px solid rgba(0, 0, 0, .1);
            }
            .title {
                margin: 10px 16px;
            }
            .content {
                border-left: 1px solid #eee;
                margin-left: 64px;
                flex: 1;
                padding: 20px;
                text-align: center;
            }
            .content .error {
                color: #EF3428;
            }
            .loading {
                display: block;
                margin: 64px auto;
                width: 64px; height: 64px;
                border: 8px solid #eee;
                border-top-color: #3023ae;
                border-radius: 50%;
                will-change: transform;
                animation: loading 2s linear infinite, fade-in 4s ease-out;
            }
            @keyframes fade-in {
                0% { opacity: 0; }
                25% { opacity: 0; }
                100% { opacity: 1; }
            }
            @keyframes loading {
                0% {
                    transform: rotate(0deg);
                    border-top-color: #3023ae;
                }
                50% {
                    transform: rotate(360deg);
                    border-top-color: #c86dd7;
                }
                100% {
                    transform: rotate(720deg);
                    border-top-color: #3023ae;
                }
            }
